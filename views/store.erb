<div class="row">
  <div class="col-sm-10">
    <h3><%= @store.name %></h3>
    <h5><%= @store.location %></h5>
    <hr>
<!-- LIST BRANDS -->
    <h3>Brands available:</h3>
    <ul>
      <% if @brands.any?() %>
          <% @brands.each do |brand| %>
          <li><%= brand.name %></li>
        <% end %>
    </ul>
        <% else %>
          <p>
            This store has no inventory logged
          </p>
        <% end %>
      <hr>
  </div>
  <div class="row">
    <div id="store" class="col-sm-10">
      <h4>Edit brands at this location</h4>
    </div>
<!-- ADD BRANDS -->
      <div class="col-sm-3">

      <form class="form-group" action="/store/<%= @store.id %>" method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="store_id" value="<%= @store.id %>">
        <label for="brand_add">Add a brand:</label>
        <select class="form-control" name="brand_add">
          <% if @all_brands.any?() %>
            <% @all_brands.each do | brand | %>
            <option value="<%= brand.id %>"><%= brand.name %></option>
            <% end %>
          <% end %>
        </select>
        <button type="submit" class="btn btn-default">Add brand</button>
      </form>
    </div>
  <!-- DELETE A BRAND -->
    <div class="col-sm-3">
      <form class="form-group" action="/store/<%= @store.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="hidden" name="store_id" value="<%= @store.id %>">
        <label for="brand_delete">Remove a brand:</label>
        <select class="form-control" name="brand_delete">
          <% if @brands.any?() %>
            <% @brands.each do |brand| %>
            <option value="<%= brand.id %>"><%= brand.name %></option>
            <% end %>
          <% end %>
        </select>
        <button type="submit" class="btn btn-danger">Remove brand</button>
      </form>
    </div>

  </div>

</div>
